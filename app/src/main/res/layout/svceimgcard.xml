<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/svceimgcard"
    android:layout_width="330dp"
    android:layout_height="230dp"
    android:background="@color/cardview_shadow_start_color">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/svceimg"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:layout_alignTop="@+id/svceimgtitle"
            android:layout_centerHorizontal="true"
            android:background="@color/bgcol"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/svcesmall" />

        <TextView
            android:id="@+id/svceimgtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="false"
            android:layout_alignParentRight="false"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="false"
            android:background="#7afefefe"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="TextView"
            android:textColor="@android:color/black"
            android:textSize="21sp"
            android:textStyle="bold" />
    </RelativeLayout>

</android.support.v7.widget.CardView>