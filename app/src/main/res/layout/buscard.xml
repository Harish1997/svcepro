<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/buscard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp">

    <RelativeLayout
        android:id="@+id/busrelay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/darkbggrey">

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="6dp"
            app:srcCompat="@drawable/ic_action_date_range" />

        <RelativeLayout
            android:id="@+id/busdatarelay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/busdaytxt"
            android:layout_marginTop="12dp"
            android:background="@color/deptbg">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@color/bg_screen3">

                <TextView
                    android:id="@+id/busnumtxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Loading..."
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </RelativeLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/busdatetxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="55dp"
            android:layout_marginTop="6dp"
            android:text="Loading..."
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/linev"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_below="@+id/busdatetxt"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="4dp"
            android:background="@android:color/black" />

        <TextView
            android:id="@+id/busdaytxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/busdatetxt"
            android:layout_below="@+id/linev"
            android:layout_marginStart="19dp"
            android:layout_marginTop="12dp"
            android:text="Loading..."
            android:textColor="@color/bb_darkBackgroundColor"
            android:textSize="17sp"
            android:textStyle="italic" />

    </RelativeLayout>
</android.support.v7.widget.CardView>