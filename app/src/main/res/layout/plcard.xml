<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/plcard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/plimg"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY"
            app:srcCompat="@color/deptbg" />

        <TextView
            android:id="@+id/titlepl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="31dp"
            android:layout_toEndOf="@+id/plimg"
            android:layout_toRightOf="@+id/plimg"
            android:text="Loading.."
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/linev"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignLeft="@+id/namepl"
            android:layout_alignParentTop="false"
            android:layout_below="@+id/titlepl"
            android:layout_marginTop="3dp"
            android:background="#909090" />

        <TextView
            android:id="@+id/namepl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titlepl"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/plimg"
            android:layout_toRightOf="@+id/plimg"
            android:text="Loading"
            android:textColor="@color/bb_tabletRightBorderDark"
            android:textSize="16sp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>